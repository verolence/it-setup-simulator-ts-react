{
  "name": "it-setup-simulator-backend",   // имя проекта
  "version": "1.0.0",                     // версия
  "main": "dist/index.js",                // входная точка (после сборки TS → JS)
  "scripts": {                            // команды, которые можно запускать через npm run
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts", // запуск в режиме разработки
    "build": "tsc",                       // компиляция TS → JS
    "start": "node dist/index.js"         // запуск собранного JS-кода
  },
  "dependencies": {                       // библиотеки для работы приложения
    "express": "^4.18.2"
  },
  "devDependencies": {                    // библиотеки, нужные только для разработки
    "@types/express": "^4.17.17",         // чтобы TypeScript понимал Express
    "@types/node": "^20.0.0",             // чтобы TypeScript понимал объекты Node.js (fs, path, и т.д.)
    "ts-node-dev": "^2.0.0",              // позволяет запускать TS напрямую без сборки
    "typescript": "^5.0.0"                // сам компилятор TypeScript
  }
}
